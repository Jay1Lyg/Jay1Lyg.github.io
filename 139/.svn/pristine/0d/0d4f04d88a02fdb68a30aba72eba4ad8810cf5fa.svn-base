  script.
    var agentid=!{JSON.stringify(agentid)};
      var appid=!{JSON.stringify(appid)};
      function TabView(btns,contents){
          var _this = this;
          this.btns = btns;
          this.contents = contents;
          this.len = this.btns.length;
          for(var i=0;i<this.len;i++){
              this.btns[i].index = i;
              this.btns[i].onclick = function(){
                  _this.tab(this)
              };
          }
      }
      TabView.prototype.tab = function(obj){
          var _index = obj.index;
          var index=_index+1;
          i=2;
          console.log(index)
          $.ajax({
            type : "get",
            url : url+'/agent/a_searchActorsUnderAgent/'+agentid+'/'+appid+'/'+index+'/1',
            dataType : "jsonp",
            success : function(data){
                console.log(data)
                var array=data.results;
                $('.actor'+index).empty();
                $(".div").css("display","none");
                var str = $('.actor'+index).html();   
                if(array.length){
                  for(var i=0;i<array.length;i++){
                   // var url3='http://www.901vehicle.cn/WX/page_deliveryActor/'+array[i].user_id;
                        if(array[i].schedule==false){
                          var schedule='无';
                        }else{
                          var schedule='有';
                        }
                        if(array[i].Representativework=="no"){
                           var Representativework="无"
                          }else{
                           var Representativework="《"+array[i].Representativework+"》";
                          }
                       
                         str +='<div class="position"><div class="actor_edit"><div class="photo_experience"><img src="'+array[i].iconUrl+'"></div><div class="detail_experience"><ul><li><span>姓名：</span>'+array[i].name+'</li><li><span>特征：</span>'+array[i].feature+'</li><li><span>档期：</span>'+schedule+'</li><li><span>代表作：</span>'+Representativework+'</li></ul></div></div><div class="edit_delete"><ul><li><a href="'+url+'/agent/a_page_userInfoEdit/'+array[i].userid+'/'+agentid+'/'+appid+'" class="white">编辑</a></li><li  class="delete" id="'+array[i].userid+'">删除</li></ul></div></div>'                                                                                          
                  };
                  $('.actor'+index).html(str); 
                }else{
                  $(".div").css('display','block')
                }      
                
                
                if(array.length<5){
                    $(".weui-loadmore").css("display","none");
                  }

            },
            error:function(){
                alert('fail');
            }
          });
          for(var j=0;j<this.len;j++){
              this.btns[j].classList.remove('active');
              this.contents[j].classList.remove('active');
          }
          obj.classList.add('active');
          this.contents[_index].classList.add('active')
      }

      function ptrajax(index,page){
            $.ajax({
              type : "get",
              url : url+'/agent/a_searchActorsUnderAgent/'+agentid+'/'+appid+'/'+index+'/'+page,
              dataType : "jsonp",
              success : function(data){
                  console.log(data)
                  var array=data.results;
                  $('.actor'+index).empty()
                  var str = $('.actor'+index).html();  
                  if(array.length){
                      for(var i=0;i<array.length;i++){
                     // var url3=url+'/WX/page_deliveryActor/'+array[i].user_id;
                      if(array[i].schedule==false){
                          var schedule='无';
                        }else{
                          var schedule='有';
                        }
                      if(array[i].Representativework=="no"){
                        var Representativework="无"
                      }else{
                      var Representativework="《"+array[i].Representativework+"》";
                      }
                     str +='<div class="position"><div class="actor_edit"><div class="photo_experience"><img src="'+array[i].iconUrl+'"></div><div class="detail_experience"><ul><li><span>姓名：</span>'+array[i].name+'</li><li><span>特征：</span>'+array[i].feature+'</li><li><span>档期：</span>'+schedule+'</li><li><span>代表作：</span><span class="li11">'+Representativework+'</span></li></ul></div></div><div class="edit_delete"><ul><li><a href="'+url+'/agent/a_page_userInfoEdit/'+array[i].userid+'/'+agentid+'/'+appid+'" class="white">编辑</a></li><li  class="delete" id="'+array[i].userid+'">删除</li></ul></div></div>'
                                                                                                                
                    }
                     $('.actor'+index).html(str);
                  }else{
                      $(".div").css('display','block')
                  }         
                  
                 
                  var totalPages=data.totalPages;
                  $(".totalPages").empty(); 
                  var strpage=$(".totalPages").html();
                  strpage='<p>'+totalPages+'</p>';
                  $(".totalPages").html(strpage);
                  if(array.length<10){
                    $(".weui-loadmore").css("display","none");
                  }



              },
              error:function(){
                  alert('fail');
              }
            }); 
          }
            ptrajax(1,1)


            //刷新
            $(document.body).pullToRefresh().on("pull-to-refresh", function() {
              setTimeout(function() {
                if(!$(".all_actor>div").eq(0).is(':hidden')){
                 
                   ptrajax(1,1)
                 
                }else if(!$(".all_actor>div").eq(1).is(':hidden')){
                  ptrajax(2,1)
                  
                }else {
                   ptrajax(3,1)
                 
                }
                $(document.body).pullToRefreshDone();
              }, 2000);
            });
            //滚动加载ajax
            function infiniteajax(index,page){
              $.ajax({
                type : "get",
                url : url+'/agent/a_searchActorsUnderAgent/'+agentid+'/'+appid+'/'+index+'/'+page,
                dataType : "jsonp",
                success : function(data){
                    console.log(data)
                    console.log(page)
                    console.log(index)
                    var array=data.results;
                    var str = $('.actor'+index).html();           
                    for(var i=0;i<array.length;i++){
                     // var url3='http://www.901vehicle.cn/WX/page_deliveryActor/'+array[i].user_id;
                          if(array[i].schedule==false){
                            var schedule='无';
                          }else{
                            var schedule='有';
                          }
                          if(array[i].Representativework=="no"){
                            var Representativework="无"
                          }else{
                            var Representativework="《"+array[i].Representativework+"》";
                          }

                          

                           str +='<div class="position"><div class="actor_edit"><div class="photo_experience"><img src="'+array[i].iconUrl+'"></div><div class="detail_experience"><ul><li><span>姓名：</span>'+array[i].name+'</li><li><span>特征：</span>'+array[i].feature+'</li><li><span>档期：</span>'+schedule+'</li><li><span>代表作：</span>'+Representativework+'</li></ul></div></div><div class="edit_delete"><ul><li><a href="'+url+'/agent/a_page_userInfoEdit/'+array[i].userid+'/'+agentid+'/'+appid+'" class="white">编辑</a></li><li class="delete" id="'+array[i].userid+'">删除</li></ul></div></div>'                                                                                          
                    }
                    $('.actor'+index).html(str); 
                    if(array.length<10){
                    $(".weui-loadmore").css("display","none");
                  } 
                },
                error:function(){
                    alert('fail');
                }
              }); 
            }
            //滚动加载
            var loading = false;
            var i=1;
            $(document.body).infinite().on("infinite", function() {
              if(loading) return;
              loading = true;
              
              var totalPages=$(".totalPages").text();
             
              var page=parseInt(totalPages)
              console.log("总页数："+page)
              setTimeout(function() {
                if(!$(".all_actor>div").eq(0).is(':hidden')){
                  if(i<page){
                    i++;
                    infiniteajax(1,i);
                    console.log(i)
                  }else{
                   $(".weui-loadmore").css("display","none");
                   $.alert("数据加载完了","加载完毕");
                   return
                  }
                 
                }else if(!$(".all_actor>div").eq(1).is(':hidden')){
                  if(i<page){
                    i++
                    infiniteajax(2,i);
                    console.log(i)
                  }else{
                   $(".weui-loadmore").css("display","none");
                   $.alert("数据加载完了","加载完毕");
                   return
                  }
                }else {
                 if(i<page){
                    i++;
                    infiniteajax(3,i);
                    console.log(i)
                  }else{
                   $(".weui-loadmore").css("display","none");
                   $.alert("数据加载完了","加载完毕");
                   return;
                   
                  }
                 
                }
                loading = false;
              }, 2000);
            });

