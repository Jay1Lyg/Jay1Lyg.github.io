.basic_info_line{
  height:30px;
  background-color:#f7f7f7;
  padding-top:5px;
  padding-left:15px;
  color:grey;
}
.basic_info_box{
  border-bottom:15px solid #f7f7f7;
}
.account_sex_box{
height:200px;
}
.sex_bar{
  height:30px;
}
.sex_bar_li{
  display:inline-block;
} 
.account_first{
  color:#a0a0a0;
  font-size:15px;
}
.account_second{
  color:#222222;
  font-size:14px;
}
.account_third{
  color:#4da2ad;
  font-size:14px;
}
.work_li{
  border-left:1px solid #a0a0a0;
  margin-left:20px;
  padding-left:20px;
  position:relative;
}
.work_circle{
  position:absolute;
  top:-3px;
  left:-7px;
  width:13px;
  height:13px;
}
.work_production{
  color:#222222;
  font-size:13px;
}
.work_role{
  color:#a0a0a0;
  font-size:13px;
}
.work_edit{
  position:absolute;
  width:30px;
  height:30px;
  top:-5px;
  right:10px;
}
.add_work button{
  width:100%;
  height:50px;
  margin:0 auto;
  border-radius:5px;
  border:1px solid #4da2ad;
  background-color:white;
  color:#4da2ad;
  font-size:14px;
}