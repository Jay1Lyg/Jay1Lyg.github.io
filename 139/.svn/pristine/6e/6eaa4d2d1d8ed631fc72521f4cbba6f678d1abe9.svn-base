.newactor_banner{
    width: 100%;
    position: relative;
    height: 40px;
    background: #eee;

}

.newactor_banner div{
    width: 100%;
    position: absolute;
    bottom: 3%;

}
.newactor_banner div ul{
    width: 100%;


}
.newactor_banner div ul li{

    font-size: 0.30rem;
    text-align: center;
    float: left;
    width: 33.3%;

}
.newactor_banner div ul li.active{
    display: block;
    color: #4da2ad;
    border-bottom: 2px solid #4da2ad;
}


section>div{
    display: none;
}
section>div.active{
    display: block;
}


