        function all_notice(page){
            var all_url=url+'/WX/wx_allcrewlist/'+page+'/'+appid+'/'+openid+'/'+time;
            console.log(all_url);
            $.ajax({
                type : "get",
                url : all_url,
                dataType : "jsonp",
                async:false,
                // jsonp: "jsonpCallback",
                success : function(data){
                    console.log(data);
                    var results=data.results;
                    $(".display_experience").attr("id",data.totalPages);
                    $(".display_experience").empty();
                    if(results.length!=0){
                      var str= $(".display_experience").html();
                      for(var i=0;i<results.length;i++){
                      var type=''
                       for(var j=0;j<results[i].categorytag.repertoireTpyeArray.length;j++){
                          type+='<span style="margin-right:5px;">'+results[i].categorytag.repertoireTpyeArray[j].repertoireTpyeName+'</span>';
                          console.log(type)
                          }
                          str+='<a href="'+url+'/WX/page_positionsDetails/'+userid+'/'+results[i].productioncrews_id[0]._id+'/'+appid+'/'+openid+'"><div><div class="photo_experience"><img src="'+results[i].compress_production_image+'" alt=""></div><div class="detail_experience"><ul><li><span>剧名：</span>《'+results[i].name+'》<span class="types">'+results[i].categorytag.categoryName+'</span></li><li><span>剧目类型：</span>'+type+'</li><li><span>拍摄周期（天）：</span>'+results[i].duration+'</li><li><span>拍摄地：</span>'+results[i].location[0].fullname+'</li></ul></div><div class="zhixiang"><img src="/img/jiantou.png" alt=""></div></div></a><div style="width: 100%;height: 3px;background: #eee;margin: 0;padding: 0"></div>'
                      }
                      $(".display_experience").html(str);
                      if (results.length <5) {
                          $(".weui-loadmore").css("display", "none")
                      } 
                      }else{
                        $(".div").css('display','block')
                      }
                   
                    
                },
                error:function(err){
                   console.log(err)
                }
            });
            
        }
