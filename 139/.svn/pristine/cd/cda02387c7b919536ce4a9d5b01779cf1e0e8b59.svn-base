/*照片*/
.flex{
    width: 100%;
    height: 150px;

}
.picture{
    height: 150px;
    width: 30%;
    border: 1px dashed #a0a0a0;
    margin: 1%;
    text-align: center;
    background: url("../img/矩形-1.png") no-repeat;
    background-position: top 40% center;
    float: left;

}
.picture img{
    width: 100%;
    height: 150px;
    
}
.submit-save{
    border: 2px solid #4da2ad;
    color: #4da2ad;
    width: 340px;
    height: 44px;
    margin: 10px auto;
    font-size: 14px;
}
/*删除*/
.add-live{
    border: 2px solid #4da2ad;
    color: #4da2ad;
    width: 340px;
    height: 44px;
    margin: 60px auto;
    font-size: 14px;
}
.upload{
    height: 44px;
    width: 167px;
    background:#4da2ad ;
    font-size: 14px;
    line-height: 44px;
    margin: 0 auto;
}
