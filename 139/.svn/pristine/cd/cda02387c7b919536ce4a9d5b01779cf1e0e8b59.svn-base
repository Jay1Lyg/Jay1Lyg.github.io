.pic{
    color: #a0a0a0;
    font-size: 15px;
}
.pic img {
    margin: 0 5px 0 0;
    height: 15px;
    width: 15px;
}
.pic p{
    font-size: 15px;
    color: #a0a0a0;
}
.active{
    display: none;
}
.font-color{
    color: #222222;
}
section input::placeholder{
    font-size: 15px;
    color: #a0a0a0;
}
section textarea::placeholder{
    font-size: 15px;
    color: #a0a0a0;
}
.common-input img{
    height: 15px;
    width: 15px;
}
#androidDialog2 span{
    border: 1px solid #4da2ad;
    margin-left: 10px;
    border-radius: 5px;
    font-size: 12px;
}
#androidDialog2 span:hover{
    background: #4da2ad;
    color: white;
}

/*角色类型弹框*/
