.icon-bar{
	border-bottom: 1px solid #ddd;
}

.icon-bar li{
	float: left;
	width: 20%;
	padding: 0.7em 0.5em;
	text-align: center;
	background: #fafafa;
	
	
}
.icon-bar li:active{
	opacity: .7;
}
.icon-bar img{
	margin-bottom: 0.3em;
	width: 80%;
	height: auto;
}
.icon-bar p{
	font-size: 0.8em;
	color: #555;
}
/*列表*/

.list-bar{
	margin-top: 0.5em;
	background: #FAFAFA;
	border-bottom: 1px solid #ddd;
}
.list-bar li{
	padding: 1em;
	border-bottom: 1px solid #eee;
}
.list-bar img{
	margin-right: 1em;
	width: 5.5em;
	height: 5.5em;
}
.list-bar .title{
	font-size: 1.4em;
	font-weight: 600;
	color: #323232;
	
}
.list-bar .text{
	margin: 0.3em 0 0.5em;
	font-size: 1em;
	color: #666;
}
.list-bar .small{
	color: #aaa;
}
