/*招募演员详情*/
.information_actor{

    padding: 0.1rem 0.5rem;

}
.information_actor>ul{
    width: 100%;


}
.information_actor>ul li{
    float: left;
    width: 50%;
    font-size: 0.28rem;
    color: #222;
    margin: 0.1rem 0;
}
.information_actor{

    padding: 0.1rem 0.5rem;
    position: relative;

}
.information_actor>ul{
    width: 100%;
}
.information_actor>ul li{
    float: left;
    width: 50%;
    font-size: 0.26rem;
    color: #222;
    margin: 0.1rem 0;
}
.information_actornone{
    display: none;
}
.information_actornone>ul{
    width: 100%;


}
.information_actornone>ul li{
    float: left;
    width: 50%;
    font-size: 0.26rem;
    color: #222;
    margin: 0.1rem 0;
}

.all_info{
    color: #4da2ad;
    font-size: 0.26rem;
    font-weight: bolder;
}


.put_away{
    color: #4da2ad;
    font-size: 0.26rem;
    font-weight: bolder;
    padding:0.2rem 0.2rem 0 0.2rem;
}
/*精准推荐*/
.recommend{
    width: 100%;
    clear: both;
    padding: 0 0.5rem;

}
.recommend>p{
    float: left;
    font-size: 0.28rem;
}
.recommend>ul{
    float: right;
    margin-right: 0.8rem;
}
.recommend>ul li{
    float: left;
    color: #4da2ad;
    padding:0.05rem 0.1rem;
    border: 1px solid #4da2ad;
    margin-left: 0.1rem;
    font-size: 0.28rem;
    border-radius: 0.1rem;
}
.recommend_edit{
    width: 100%;
}
.recommend_edit>div>p{
    font-size: 0.28rem;
    margin-left: 5px;

}
.recommend_edit>div>p>span{
    color: #4da2ad;
}
.recommend_edit>div{
    float: left;
}
.recommend_edit>div:first-child{
    width: 30%;
    padding: 1%;
}
.recommend_edit>div:first-child img{
    width: 100%;
    height: 2.4rem;

}
.recommend_edit>div:last-child{
    width: 65%;
    height: 2.4rem;
    /*border: 1px solid black;*/
}
/*图表
*/
.chart>div{
    width: 100%;
    height: 100%;
}
.pipei{
    margin-top: 0.2rem;
}
.pipei li{
    font-size: 0.28rem;
    color: #222222;
}

.button_zu{
    width: 100%;
    text-align: center;
}
.button_zu button{
    width: 80%;
    height: 45px;
    background: #4da2ad;
    color: white;
    border: none;
    border-radius: 5px;
    font-size: 14px;
}