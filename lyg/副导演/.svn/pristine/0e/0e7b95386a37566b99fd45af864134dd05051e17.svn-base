      div(style='width: 100%;height: 5px;background: #eee;margin: 0;padding: 0')
      .display_experience
        div(style='width: 100%;height: 5px;background: #eee;margin: 0;padding: 0')
  script.
    var url="http://www.901vehicle.cn";
    var userid = !{JSON.stringify(userid)};
    var page=1;
     var url4=url+'/WX/wx_publishCrews/'+userid+'/'+page;
     console.log(url4)
      $.ajax({
        type : "get",
        url : url4,
        dataType : "jsonp",
        // jsonp: "jsonpCallback",
        success : function(data){
          console.log(data);
         
          var length=data.length;
          var str='';
          for(var i=0;i<length;i++){
          var span=''
            for(var j=0;j<data[i].tags.repertoireTpyeArray.length;j++){
             span+='<span>'+data[i].tags.repertoireTpyeArray[j].repertoireTpyeName+'</span>'
            };
            
             str+='<div class="mask"><div><img class="'+data[i].isDelete+'" src="/img/guaqi1.png"></div><div><div class="photo_experience"><img src="'+data[i].production_image+'" alt=""></div><div class="detail_experience"><ul><li><span>剧名：</span>《'+data[i].production_crews[0].name+'》<span class="types">'+data[i].tags.categoryName+'</span></li><li><span>剧目类型：</span>'+span+'</li><li><span>拍摄周期(天)：</span>'+data[i].duration+'</li><li><span>拍摄地：</span>'+data[i].location[0].fullname+'</li></ul></div><div class="zhixiang"><img src="/img/jiantou.png" alt=""></div><div style="width: 100%;height: 2px;background: #eee;margin: 5px 0;padding: 0"></div><div class="about_me"><button class="my_invite" id="'+data[i].production_crews[0]._id+'">我邀请的</button><button  class="application_my">申请我的</button></div></div><div style="width: 100%;height: 5px;background: #eee;margin: 0;padding: 0"></div></div>'
          };
          console.log(span)
          $('.display_experience').html(str)
        },
        error:function(){
        alert('fail');
        }
      });
      //我邀请的
      $(".display_experience").on("click",".my_invite",function(){
         var id=$(this).attr("id");
         window.location.href=url+'/WX/page_positioninfo/'+id;

      })
      //shenqing我的e
      $(".display_experience").on("click",".application_my",function(){
         var id=$(this).prev().attr("id");
         console.log(id);
         window.location.href=url+'/WX/page_positioninfo1/'+id;

      })