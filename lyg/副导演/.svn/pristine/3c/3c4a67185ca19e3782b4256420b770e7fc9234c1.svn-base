              for(var j=0;j<feature.length;j++){
               var hh=feature[j];
                var jing="#";
                var feature1=jing+hh
                //console.log(skill1)
                $(feature1).attr("checked",true);
                
              }
            },
            error:function(){
            alert('fail');
            }
