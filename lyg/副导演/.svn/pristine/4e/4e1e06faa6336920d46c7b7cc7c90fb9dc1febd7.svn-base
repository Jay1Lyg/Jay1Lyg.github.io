.newactor_banner{
    width: 100%;
    position: relative;
    height: 40px;
    background: #eee;

}

.newactor_banner div{
    width: 100%;
    position: absolute;
    bottom: 3%;

}
.newactor_banner div ul{
    width: 100%;


}
.newactor_banner div ul li{

    font-size: 0.30rem;
    text-align: center;
    float: left;
    width: 33.3%;

}
.newactor_banner div ul li.active{
    display: block;
    color: #4da2ad;
    border-bottom: 2px solid #4da2ad;
}


section>div{
    display: none;
}
section>div.active{
    display: block;
}


/*图表*/
.recommend{
    width: 100%;
    clear: both;
    padding: 0 0.5rem;

}
.recommend>p{
    float: left;
    font-size: 0.28rem;
}
.recommend>ul{
    float: right;
    margin-right: 0.8rem;
}
.recommend>ul li{
    float: left;
    color: #4da2ad;
    padding:0.05rem 0.1rem;
    border: 1px solid #4da2ad;
    margin-left: 0.1rem;
    font-size: 0.28rem;
    border-radius: 0.1rem;
}
.recommend_edit{
    width: 100%;
}
.recommend_edit>div>p{
    font-size: 14px;
    margin-left: 5px;

}
.recommend_edit>div>p>span{
    color: #4da2ad;
}
.recommend_edit>div{
    float: left;
}
.recommend_edit>div:first-child{
    width: 30%;
    padding: 1%;
}
.recommend_edit>div:first-child img{
    width: 100%;
    height: 100%;

}
.recommend_edit>div:last-child{
    width: 65%;
    height: 2.4rem;
    /*border: 1px solid black;*/
}

.pipei{
    margin-top: 0.2rem;
}
.pipei li {
    font-size: 14px;
    color: #222222;

}