    function list(){
          var juzu_url=url+'/WX/wx_searchProgrammeDetails/'+production_id+'/'+actorbudget_id+'/'+programme_id+'/'+attribute;
          console.log(juzu_url);
          $.ajax({
              type : "get",
              url : juzu_url,
