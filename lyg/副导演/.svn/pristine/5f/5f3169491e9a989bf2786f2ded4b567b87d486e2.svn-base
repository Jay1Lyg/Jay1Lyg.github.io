    TabView.prototype.tab = function(obj){
        var _index = obj.index;

        for(var j=0;j<this.len;j++){
            this.btns[j].classList.remove('active');
            this.contents[j].classList.remove('active');
        }
        obj.classList.add('active');
        this.contents[_index].classList.add('active')
    }
    function searchcandidatesinfo(page,index){
      var url4=url+'/WX/wx_allsearchmyinvitationActor/'+careerincrew_id+'/'+page+'/'+index;
     console.log(url4)
      $.ajax({
        type : "get",
        url : url4,
         async: false, 
        dataType : "jsonp",
        // jsonp: "jsonpCallback",
        success : function(data){
          console.log(data);
          var data=data;
          $('.weui-loadmore').attr("id",data.totalPages)
          var results=data.results;
          var length=results.length;
          var str='';
          var main="main";
           //$(info).empty();
           //$(".info_clear").empty;
           if(results.length){
               for(var i=0;i<length;i++){
              
               str+='<div id="'+results[i]._id+'" class="recommend_edit"><div><img src="'+results[i].image+'" alt="" class="chart"></div><div><p style="font-size:14px;">与演员<span style="color:#4da2ad">'+results[i].realname+'</span>的匹配度<span style="color:#4da2ad">'+results[i].totalMatchingDegree*1000/10+'%</span></p><div id="'+main+index+i+data.currentPage+'" style="width: 100px;height:112px;float: left;margin-top: 0.1rem"></div><ul class="pipei"><li><span class="one"></span>基本信息：'+results[i].basicMatchingDegree*1000/10+'%</li><li><span class="two"></span>特征角色：'+results[i].featureMatchingDegree*1000/10+'%</li><li><span class="three"></span>片酬需求：'+results[i].offsetMatchingDegree*1000/10+'%</li><li><span class="four"></span>档期匹配：'+results[i].scheduleMatchingDegree*1000/10+'%</li></ul></div></div><div style="background: #f2f2f2;height: 0.1rem;clear: both"></div>'
               //var myChart='myChart'+i;
                
            };
            var info=".info"+index;
            $(info).html(str);
            $(".div").css("display","none");
           }else{
            $(".div").css("display","block");
           }
         
          console.log($(info));
          for(var j=0;j<length;j++){
          
             chart('myChart'+index+j+data.currentPage,'main'+index+j+data.currentPage,results[j].totalMatchingDegree,results[j].basicMatchingDegree,results[j].featureMatchingDegree,results[j].offsetMatchingDegree,results[j].scheduleMatchingDegree)
          };
          if(data.results.length<5){
            $(".weui-loadmore").css("display","none")
          }
          
        },
        error:function(){
        alert('fail');
        }
      });
        
            
    }

