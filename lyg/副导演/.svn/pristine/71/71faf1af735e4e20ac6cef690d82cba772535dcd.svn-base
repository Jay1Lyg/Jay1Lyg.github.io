/*公共部分人*/
body{
background: rgba(242, 242, 242, 1)
}

/*添加新演员*/
.newactor_banner{
    width: 100%;
    position: relative;
    height: 4rem;
}
.newactor_banner img{
    width: 100%;
    height: 4rem;
}
.newactor_banner div{
    width: 100%;
    position: absolute;
    bottom: 3%;

}
.newactor_banner div ul{
   width: 100%;
    
}
.newactor_banner div ul li{

    font-size: 0.30rem;
    text-align: center;
    float: left;
    width: 25%;

}
.newactor_banner div ul li.active{
    display: block;
    color: #4da2ad;
    border-bottom: 2px solid #4da2ad;
}

section{
width: 100%;
    /*margin-bottom: 50px;*/
}
section>div{
    display: none;
}
section>div.active{
    display: block;
 }
/*基本资料*/
.common-input{
    font-size: 0.30rem;
}
.font-color{
    font-size: 0.28rem;
}
/*三围*/
.measurements input{
    float: left;width: 30%;
}
/*出生年月*/
.font{
    color: #666;
    font-size: 0.28rem;
}
/*下拉*/
.weui-select{
    font-size: 0.28rem;
}
.weui-cell_select .weui-cell__bd:after{
    border-style: none;
}
/*特长*/
.specialty>div{
    float: left;
    width: 25%;
    margin: 0.15rem 0;
}

/*复选框样式*/
.specialty>div input{
    background: white;
}
.specialty>div label{
    font-size: 0.28rem;
}
.newactor_button button{
    width:100% ;
    border-style: none;
    background: #4da2ad;
    color: white;
    height: 0.6rem;
    border-radius: 0.05rem;
    font-size: 0.14rem;
    position: fixed;
    bottom: 0;
}
.add_experience{
    text-align: center;
}
.add_experience button{
    width:100% ;
    border-style: none;
    background: #4da2ad;
    color: white;
    height: 0.5rem;
    border-radius: 0.05rem;
    font-size: 0.14rem;
    width: 80%;

}

/*弹出框*/
.weui-skin_android .weui-dialog__hd{
    text-align: center;
}
.weui-dialog__hd{
    padding: 0.1rem 1.6rem;
    text-align: center;

}
.weui-skin_android .weui-dialog__ft{
    text-align: center;
}
.weui-skin_android .weui-dialog__btn{
    display: inline;
}
/*弹出层*/
.dialogs{
    display: none;
    width: 80%;
    position: fixed;
    left: 50%;
    transform: translate(-50%, -120%);
    z-index: 101;
    animation:myfirst 1s;
    -webkit-animation:myfirst 1s;


}
.dialogs_delete{
    display: none;
    width: 80%;
    position: fixed;
    left: 50%;
    transform: translate(-50%, -120%);
    z-index: 101;
    animation:myfirst 1s;
    -webkit-animation:myfirst 1s;
}
.overlay {
    background: #000;
    filter: alpha(opacity=50); /* IE的透明度 */
    opacity: 0.5;  /* 透明度 */
    display: none;
    position: absolute;
    top: 0px;
    left: 0px;
    width: 100%;
    height: 100%;
    z-index: 200; /* 此处的图层要大于页面 */
    display:none;

}
.overlay1 {
    background: #000;
    filter: alpha(opacity=50); /* IE的透明度 */
    opacity: 0.5;  /* 透明度 */
    display: none;
    position: absolute;
    top: 0px;
    left: 0px;
    width: 100%;
    height: 100%;
    z-index: 200; /* 此处的图层要大于页面 */
    display:none;

}
@keyframes myfirst
{
    from {opacity:0;}
    to {opacity:1;}
}

@-webkit-keyframes myfirst /* Safari and Chrome */
{
    from {opacity:0;}
    to {opacity:1;}
}

/*选择框样式*/
.toolbar .title{
    font-size: 0.28rem;
    line-height: 1rem;
}
.toolbar .toolbar-inner{
    height: 1rem;
}
.toolbar .picker-button{
    font-size: 0.38rem;
    line-height: 1rem;
    height: 1rem;
}
.weui-picker-modal .picker-items-col.picker-items-col-center{
    margin-top: 0px;
}
.weui-picker-modal .picker-items-col-wrapper{
    margin-top: 0px;
}

.weui-picker-modal .picker-item{
    font-size: 0.30rem;
}
.weui-picker-overlay, .weui-picker-container{
    bottom: -3rem;
}


/*第二步参演经历*/
.display_experience{
    width: 100%;

}
.display_experience>div{
    height: 2.28rem;
    padding: 0.1rem;
    background: white;
    margin-bottom: 0.2rem;
}
.display_experience>div>div{
    float: left;
}
.photo_experience{
    width: 35%;

}
.photo_experience img{
    width: 2.3rem;
    height: 1.9rem;
    margin-top: 0.2rem;
}
.detail_experience{
    width: 50%;
    padding: 1%;
}
.detail_experience img{
    float: right;
    width: 0.4rem;
}
.detail_experience ul{
    clear: both;
}
.detail_experience ul li{
    font-size: 0.28rem;
    color: #696969;
}
.detail_experience ul li span{
    color: #222222;
}
.delete_experience{
    width: 13%;
    height: 2.28rem;
    background: #4da2ad;
    text-align: center;
}
.delete_experience p{
    color: white;
    line-height: 2.28rem;
}

