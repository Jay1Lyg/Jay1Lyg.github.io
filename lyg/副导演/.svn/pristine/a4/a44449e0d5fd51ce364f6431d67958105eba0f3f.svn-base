
/*头部结束*/
section .banner-1{
    height: 200px;
    position: relative;
}
section .banner-1 img{
    width: 100%;
    height: 200px;
}

section .actor-data {
    color: #a0a0a0;
    line-height: 33px;
    font-size: 14px;
    color: #a0a0a0;
}
section input::placeholder{
    text-align: right;
    font-size: 12px;
    color: #a0a0a0;
}

section textarea::placeholder{
    font-size: 12px;
    color: #a0a0a0;
}
.common-input{
    font-size: 14px;
    color: #222222;
}
.add-live{
    border: 2px solid #4da2ad;
    color: #4da2ad;
    width: 340px;
    height: 44px;
    margin: 0 auto;
    font-size: 14px;
}
.submit-save{
    border: 2px solid #4da2ad;
    color: #4da2ad;
    width: 340px;
    height: 44px;
    margin: 0 auto;
    font-size: 14px;
}
.title-height{
    height: 50px;
    line-height: 50px;
    font-size: 14px;
}

.look-over{
    background:#4da2ad ;
    height: 49px;
    font-size: 16px;
    line-height: 49px;
}
.look-over img{
    height: 10px;
    line-height: 49px;
    margin-right: 5px;
}

/*必填*/
.must{
    height: 10px;
    width: 10px;
}

/*性别样式*/
.option {
    font-size: 15px;
    text-align: right;
    color: #a0a0a0;
}

.data{
    font-size: 15px;
    color: #a0a0a0;
}
/*input字体颜色*/
.font-color{
    color: #666666;
    font-size:14px;
}
/*ul点击事件*/
.pic_ul{
    width: 100%;
}
.pic{
    height: 160px;
    width: 30%;
    border: 1px dashed #a0a0a0;
    margin: 5px;
    text-align: center;
    background: url("../img/矩形-1.png") no-repeat;
    background-position: top 40% center;
    position: relative;
    float: left;
    list-style: none;
}
.pic img{
    width: 100%;
    height: 85%;
}
.pic p{
    font-size: 12px;
    color: #a0a0a0;
    position: absolute;
    bottom: 0;left: 15px;
}


