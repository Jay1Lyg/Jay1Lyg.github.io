/*
*   根据name值查询部门，并将id和name值进行包装
*
*
*/
function searchRoleCategoryByName (name, callback){
	var data = {};
	RoleCategory.model.findOne()
	.where('name', name)
	.exec( function (err, ret){
		if(err){
			callback(err, data);
		}else{
			if(ret == null || ret == {}){
				//新创建一条部门
				RoleCategory.model.create({name: name}, function (err1, ret1){
					if(err1){
						callback(err1, data);
					}else{
						ret1.save( function (err2){
							if(err2){
								callback(err2, data);
							}else{
								data.id = ret1._id;
								data.name = ret1.name;
								callback(null, data);
							}
						});
					}
				});
			}else{
				data.id = ret._id;
				data.name = ret.name;
				callback(null, data);
			}
		}
	});
}
