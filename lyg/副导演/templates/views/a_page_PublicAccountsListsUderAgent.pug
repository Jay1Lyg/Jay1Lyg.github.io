        style.
            * {
                padding: 0;
                margin: 0;
                list-style: none
            }

            .list {
                height: 90px;
                width: 100%;
                background: #f2f2f2;
                padding: 15px;
                box-sizing: border-box;
                margin:2px;
            }

            .list > img {
                width: 60px;
                border-radius: 50%;
                display: inline-block;
                vertical-align: middle;
                margin-right: 15px;
               
            }

            .list > span {
                font-size: 18px;
                line-height:60px;
            }
